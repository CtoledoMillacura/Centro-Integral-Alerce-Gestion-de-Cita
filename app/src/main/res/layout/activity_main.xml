<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Configuracion.LugarAdapter$MainActivity">

    <!-- Días de la semana (L M M J V S D) -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@drawable/background_layout"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/btn_mon"
            android:text="L"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/slateblue"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_tue"
            android:text="M"
            android:textColor="@color/white"
            android:backgroundTint="@color/slateblue"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_wed"
            android:text="M"
            android:textColor="@color/white"
            android:backgroundTint="@color/slateblue"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_thu"
            android:text="J"
            android:textColor="@color/white"
            android:backgroundTint="@color/slateblue"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_fri"
            android:text="V"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/slateblue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_sat"
            android:text="S"
            android:textColor="@color/white"
            android:backgroundTint="@color/slateblue"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_sun"
            android:text="D"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/slateblue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Contenedor de actividades (vacío por ahora) -->

    <LinearLayout
        android:id="@+id/bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_layout"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageButton
            android:id="@+id/btn_activities"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/actividades"
            android:scaleType="centerInside"
            android:src="@drawable/actividad" />

        <ImageButton
            android:id="@+id/btn_calendar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/calendario"
            android:scaleType="centerInside"
            android:src="@drawable/calendario" />

        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/configuracion"
            android:scaleType="centerInside"
            android:src="@drawable/configuracion" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
