<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@android:color/white">

    <!-- Nombre del Tipo de Actividad -->
    <TextView
        android:id="@+id/tipo_actividad_nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre del Tipo de Actividad"
        android:textSize="16sp"
        android:textColor="#11452C"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btn_editar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Descripci贸n del Tipo de Actividad -->
    <TextView
        android:id="@+id/tipo_actividad_descripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Descripci贸n: Opcional"
        android:textSize="14sp"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/btn_editar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tipo_actividad_nombre" />

    <!-- Bot贸n Editar -->
    <Button
        android:id="@+id/btn_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar"
        android:textColor="@android:color/white"
        android:backgroundTint="#11452C"
        app:layout_constraintEnd_toStartOf="@+id/btn_eliminar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Bot贸n Eliminar -->
    <Button
        android:id="@+id/btn_eliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:textColor="@android:color/white"
        android:backgroundTint="#11452C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
